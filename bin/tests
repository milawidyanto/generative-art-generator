#!/bin/sh

if [ $# -eq 0 ]; then
    # all tests
    TESTING=True py.test ./
elif [ "$1" = '--xml' ]; then
    # xml output
    mkdir -p ./.tmp/
    TESTING=True py.test --junitxml=.tmp/test-results.xml ./ > /dev/null
    cat .tmp/test-results.xml
elif [ $# -eq 1 ]; then
    # one single test
    TESTING=True py.test -sv $1
fi
